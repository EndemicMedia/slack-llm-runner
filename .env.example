# === SLACK ===
SLACK_APP_TOKEN=xapp-...
SLACK_BOT_TOKEN=xoxb-...

# === CHANNELS ===
# Comma-separated channel IDs the bot listens in
SLACK_LISTEN_CHANNELS=C0123ABCD,C9876ZYXW

# === AUTHORIZATION ===
# Comma-separated Slack user IDs allowed to run commands
ALLOWED_USER_IDS=U0123AAA,U0123BBB

# === CLI BINARIES ===
CLI_CLAUDE=claude
CLI_KIMI=kimi

# === BEHAVIOR ===
SESSION_TIMEOUT_MINUTES=30
OUTPUT_FLUSH_INTERVAL_MS=2000
OUTPUT_MAX_CHARS_PER_MESSAGE=3500

# === ENVELOPE (LLM-directed notifications) ===
ENVELOPE_PROMPT_FILE=prompts/envelope-instructions.txt
ENVELOPE_ACTIVATION_DELAY_MS=1500
ENVELOPE_UNCLOSED_TIMEOUT_MS=30000

# === LOGGING ===
LOG_LEVEL=info
LOG_SESSION_RETENTION_DAYS=30
